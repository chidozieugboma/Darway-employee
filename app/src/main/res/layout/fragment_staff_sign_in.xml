<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:background="@android:color/white"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        <LinearLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_staffName"
                android:textColor="#0A090B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="22dp"/>

            <TextView
                android:id="@+id/txt_Location"
                android:textColor="#0A090B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign in Location Unkown"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/txt_dept"
                android:textColor="#ADABAF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/txt_Onleave"
                android:textColor="#ADABAF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15dp"/>

              <TextView
                android:id="@+id/txt_regDate"
                android:textColor="#E91E63"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01-09-2020"
                android:textSize="14dp"/>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>